# Environment
ENVIRONMENT=development
NODE_ENV=development
DEBUG=False

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=False
WORKERS=1
LOG_LEVEL=INFO

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password-here
POSTGRES_DB=aimail
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password-here

# Email
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password-here
MAIL_FROM=noreply@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=AiMail
MAIL_TLS=True
MAIL_SSL=False
MAIL_USE_CREDENTIALS=True
MAIL_VALIDATE_CERTS=True

# SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=True
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password-here

# IMAP
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_SECURE=True
IMAP_USER=your-email@example.com
IMAP_PASS=your-imap-password-here

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password-here

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature flags
ENABLE_METRICS=False
ENABLE_DOCS=True
AI_ENABLED=True

# Rate limiting
RATE_LIMIT_ENABLED=True
DEFAULT_RATE_LIMIT_CALLS=100
DEFAULT_RATE_LIMIT_PERIOD=60

# Session
SESSION_COOKIE_NAME=session
SESSION_EXPIRE_MINUTES=10080  # 7 days

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/aimail

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=your-verified-sender@example.com
EMAIL_FROM_NAME=AiMail System

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000

# Monitoring
PROMETHEUS_MULTIPROC_DIR=/tmp
GRAFANA_ADMIN_PASSWORD=admin 