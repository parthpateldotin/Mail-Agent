# Email Service Configuration
EMAIL_SERVICE_USERNAME=your.email@yourdomain.com
EMAIL_SERVICE_PASSWORD=your_email_password

# Server Configuration
IMAP_SERVER=imap.yourdomain.com
IMAP_PORT=993
SMTP_SERVER=smtp.yourdomain.com
SMTP_PORT=587
USE_SSL=true
USE_TLS=true

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
DAILY_SUMMARY_TIME=23:00

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_PROMPT=You are a helpful email assistant.

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_assistant

SQLALCHEMY_DATABASE_URI=postgresql://postgres:your_db_password@localhost:5432/email_assistant 