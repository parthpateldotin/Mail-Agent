{
  "name": "aimail-backend",
  "version": "1.0.0",
  "description": "AI-powered email management system backend",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm migration:generate",
    "migration:run": "ts-node src/scripts/migrate.ts",
    "migration:revert": "npm run typeorm migration:revert",
    "db:init": "ts-node src/scripts/init-db.ts",
    "db:seed": "ts-node src/scripts/seed.ts",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.2.1",
    "helmet": "^6.1.5",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "mailparser": "^3.7.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "openai": "^4.82.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.20",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/imap": "^0.8.42",
    "@types/imap-simple": "^4.2.9",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/mailparser": "^3.4.5",
    "@types/morgan": "^1.9.4",
    "@types/node": "^22.13.1",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^144.0.0",
    "imap-simple": "^5.1.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4",
    "winston": "^3.17.0"
  }
}
